<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<link rel="stylesheet" type="text/css" href="/css/form.css">
	<title>Create An Account</title>
</head>
<body>
	<% const getErrors = (errors, property) => { %>
		<% try { %>
		  <% return errors.mapped()[property].msg %>
		<% } catch(err) { %>
			<% return ''; %>
		  <% } %>
	<% } %>
	<div class="container">
		<form  id="form" action="/auth/teachers/signup" method="POST" class="form">
			<h2>Register With Us</h2>
			<div class="form-control">
				<label for="firstname">First Name</label>
				<input type="text" name="firstName" id="firstname" placeholder="First Name">
				<small><em>Error Message</em></small>
			</div>
			<div class="form-control">
				<label for="lastname">Last Name</label>
				<input type="text" name="lastName" id="lastname" placeholder="Last Name">
				<small><em>Error Message</em></small>
            </div>
            <div class="form-control">
				<label for="middlename">Username</label>
				<input type="text" name="displayName" id="displayname" placeholder="Username">
				<% if(errors) { %>
					<small style="visibility: visible; color: red;"><em><%= getErrors(errors, 'displayName') %></em></small>
				<% } %>
			</div>
			<div class="form-control">
				<label for="emailAddress">Email Address</label>
				<input type="email" name="emailAddress" id="emailaddress" placeholder="Email Address">
				<% if(errors) { %>
					<small style="visibility: visible; color: red;"><em><%= getErrors(errors, 'emailAddress') %></em></small>
				<% } %>
			</div>
			<div class="form-control">
				<label for="password">Password</label>
				<input type="password" id="password" name="password" placeholder="Password">
				<% if(errors) { %>
					<small style="visibility: visible; color: red;"><em><%= getErrors(errors, 'password') %></em></small>
				<% } %>
			</div>
			<div class="form-control">
				<label for="password2">Confirm Password</label>
				<input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password">
				<% if(errors) { %>
					<small style="visibility: visible; color: red;"><em><%= getErrors(errors, 'confirmPassword') %></em></small>
				<% } %>
			</div>
			<div class="form-control">
				<label for="gender">Gender</label>
				<select name="gender" id="gender">
					<option value="Male">Male</option>
					<option value="Female">Female</option>
					<option value="Binary">Binary</option>
				</select>
				<small><em>Error Message</em></small>
			</div>
			<div class="form-control">
				<label for="role">Role</label>
				<select name="role" id="role">
					<option value="classTeacher">Class Teacher</option>
					<option value="subjectTeacher">Subject Teacher</option>
				</select>
				<small><em>Error Message</em></small>
			</div>
			<button>Submit</button>
		</form>
	</div>
	<script type="text/javascript" src="/js/form.js"></script>
</body>
</html>